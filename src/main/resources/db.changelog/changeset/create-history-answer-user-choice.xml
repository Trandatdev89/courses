<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="21" author="datmacay_v1">
        <createTable tableName="history_answer_user_choice">
            <column name="history_answer_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="answer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="history_answer_user_choice"
                columnNames="history_answer_user_id, answer_id"
                constraintName="pk_history_answer_user_choice"/>


        <addForeignKeyConstraint
                baseTableName="history_answer_user_choice"
                baseColumnNames="history_answer_user_id"
                referencedTableName="history_score_user"
                referencedColumnNames="id"
                constraintName="fk_history_attempt_answer"/>

        <addForeignKeyConstraint
                baseTableName="history_answer_user_choice"
                baseColumnNames="answer_id"
                referencedTableName="answer"
                referencedColumnNames="id"
                constraintName="fk_history_option"/>

    </changeSet>

</databaseChangeLog>