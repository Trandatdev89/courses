<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="16" author="datmacay_v1">
        <createTable tableName="questions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="quiz_id" type="bigint"/>
            <column name="content" type="varchar(225)"/>
            <column name="type" type="varchar(225)"/>
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
            <column name="position" type="int"/>
            <column name="score" type="double"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="questions"
                baseColumnNames="quiz_id"
                referencedTableName="quiz"
                referencedColumnNames="id"
                constraintName="fk_questions_quiz"/>

    </changeSet>
</databaseChangeLog>